<Application
    x:Class="nexMuni.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:nexMuni">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="PivotHeaderForegroundSelectedBrush" Color="White"/>
                    <SolidColorBrush x:Key="PivotHeaderForegroundUnselectedBrush" Color="White" Opacity=".50"/>
					<x:Double  x:Key="PivotHeaderItemFontSize" >52</x:Double>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
