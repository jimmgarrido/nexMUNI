<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:nexMuni"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:SampleData="using:Blend.SampleData.SampleDataSource"
    x:Class="nexMuni.MainPage"
    mc:Ignorable="d">

	<Page.Resources>
		<SampleData:SampleDataSource x:Key="SampleDataSource" d:IsDataSource="True"/>
	</Page.Resources>

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Hub Header="Hub">
			<HubSection Header="HubSection 0">
				<DataTemplate>
					<Grid>
						<GridView HorizontalAlignment="Left" VerticalAlignment="Top" Width="100">
							<DataTemplate>
							</DataTemplate>
						</GridView>
					</Grid>
				</DataTemplate>
			</HubSection>
			<HubSection Header="HubSection 1">
				<DataTemplate>
					<Grid/>
				</DataTemplate>
			</HubSection>
		</Hub>
	</Grid>
</Page>
